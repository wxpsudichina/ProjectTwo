<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="#35363a">

            <ImageView
                android:id="@+id/activity_vehiche_ivback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:src="@mipmap/zero_iv_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="车辆认证中心"
                android:textColor="#ffffff"
                android:textSize="50px"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50px"
                android:src="@mipmap/feather" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12px"
                android:text="请填写相关的真实的相关信息"
                android:textColor="#666666"
                android:textSize="32px" />
        </LinearLayout>

        <com.sudichina.ftwl.customview.TitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="58px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            app:line_color="#d1d1d1"
            app:line_height="2px"
            app:title_color="#949494"
            app:title_size="30px"
            app:title_text="车辆信息" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:background="@drawable/vehicle_certification_input_border"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62px"
                android:layout_marginRight="62px"
                android:text="车牌号"
                android:textColor="#333333"
                android:textSize="44px" />

            <TextView
                android:id="@+id/tv_car_first_letter"
                android:layout_width="90px"
                android:layout_height="70px"
                android:background="@drawable/license_plate"
                android:gravity="center"
                android:text="京"
                android:textColor="#ffb900"
                android:textSize="44px" />

            <EditText
                android:id="@+id/edit_card_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="34px"
                android:background="@null"
                android:hint="请输入6位车牌号"
                android:singleLine="true"
                android:textColor="#cccccc"
                android:textCursorDrawable="@null"
                android:textSize="38px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="520px"
            android:layout_marginLeft="44px"
            android:layout_marginRight="44px"
            android:layout_marginTop="24px"
            android:background="@drawable/vehicle_certification_input_border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="@drawable/vehicle_certification_input_border_bottom"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="44px"
                    android:text="车型"
                    android:textColor="#535353"
                    android:textSize="46px" />

                <EditText
                    android:id="@+id/edit_car_model"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="160px"
                    android:background="@null"
                    android:editable="false"
                    android:singleLine="true"
                    android:text="请点击选择"
                    android:textColor="#cccccc"
                    android:textCursorDrawable="@null"
                    android:textSize="38px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="@drawable/vehicle_certification_input_border_bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="44px"
                    android:text="车长"
                    android:textColor="#535353"
                    android:textSize="46px" />

                <EditText
                    android:id="@+id/edit_car_long"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="160px"
                    android:background="@null"
                    android:editable="false"
                    android:singleLine="true"
                    android:text="请点击选择"
                    android:textColor="#cccccc"
                    android:textCursorDrawable="@null"
                    android:textSize="38px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="@drawable/vehicle_certification_input_border_bottom"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="44px"
                    android:text="面积(m³)"
                    android:textColor="#535353"
                    android:textSize="46px" />

                <EditText
                    android:id="@+id/edit_car_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="65px"
                    android:background="@null"
                    android:editable="false"
                    android:singleLine="true"
                    android:text="请点击选择"
                    android:textColor="#cccccc"
                    android:textCursorDrawable="@null"
                    android:textSize="38px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="@drawable/vehicle_certification_input_border_bottom"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="44px"
                    android:text="体积(吨)"
                    android:textColor="#535353"
                    android:textSize="46px" />

                <EditText
                    android:id="@+id/edit_car_volume"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="75px"
                    android:background="@null"
                    android:editable="false"
                    android:singleLine="true"
                    android:text="请点击选择"
                    android:textColor="#cccccc"
                    android:textCursorDrawable="@null"
                    android:textSize="38px" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="40px"
            android:background="@drawable/vehicle_certification_input_border"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44px"
                android:text="发动机号"
                android:textColor="#535353"
                android:textSize="46px" />

            <EditText
                android:id="@+id/et_car_engine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="44px"
                android:background="@null"
                android:hint="请输入发动机号"
                android:singleLine="true"
                android:textColor="#cccccc"
                android:textCursorDrawable="@null"
                android:textSize="38px" />

        </LinearLayout>

        <com.sudichina.ftwl.customview.TitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="34px"
            app:line_color="#d1d1d1"
            app:line_height="2px"
            app:title_color="#949494"
            app:title_size="30px"
            app:title_text="车辆照片信息" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44px"
            android:layout_marginRight="44px"
            android:layout_marginTop="36px"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_driver_act"
                    android:layout_width="match_parent"
                    android:layout_height="356px"
                    android:layout_marginRight="10px"
                    android:src="@mipmap/driver_license" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="点击 上传驾驶证照片"
                    android:textColor="@android:color/white"
                    android:textSize="30px" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="match_parent"
                    android:layout_height="356px"
                    android:layout_marginLeft="10px"
                    android:src="@mipmap/add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="点击 上传驾驶证照片"
                    android:textColor="@android:color/white"
                    android:textSize="30px" />

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="86px"
            android:gravity="center"
            android:text="你们照片仅用于审核，我们将严格保密"
            android:textColor="#959595" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginTop="24px"
            android:background="#ffb900"
            android:text="保存"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>
