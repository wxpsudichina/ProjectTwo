<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/mainColor">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@mipmap/go_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@android:color/white"
            android:textSize="50px"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:layout_marginTop="38px"
        android:background="@drawable/quick_login_input_border"
        android:gravity="center">

        <TextView
            android:layout_width="148px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+86"
            android:textColor="#696969"
            android:textSize="48px" />

        <TextView
            android:layout_width="1px"
            android:layout_height="54px"
            android:background="#949494" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/register_et_phone_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="38px"
            android:background="@null"
            android:hint="请输入您的手机号"
            android:inputType="phone"
            android:singleLine="true"
            android:textColorHint="#c6c6c6"
            android:textCursorDrawable="@null"
            android:textSize="38px"
            app:met_clearButton="true"
            app:met_hideUnderline="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginBottom="38px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:layout_marginTop="38px"
        android:background="@drawable/quick_login_input_border"
        android:gravity="center">

        <TextView
            android:layout_width="148px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="验证码"
            android:textColor="#696969"
            android:textSize="48px" />

        <TextView
            android:layout_width="1px"
            android:layout_height="54px"
            android:background="#949494" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="38px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入您的验证码"
            android:inputType="phone"
            android:singleLine="true"
            android:textColorHint="#c6c6c6"
            android:textCursorDrawable="@null"
            android:textSize="38px"
            app:met_clearButton="true"
            app:met_hideUnderline="true" />

        <Button
            android:id="@+id/register_take_code"
            android:layout_width="196px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26px"
            android:background="@drawable/btn_getcode_bg"
            android:text="获取验证码"
            android:textColor="#303030"
            android:textSize="26px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:background="@drawable/quick_login_input_border"
        android:gravity="center">

        <TextView
            android:layout_width="148px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="密码"
            android:textColor="#696969"
            android:textSize="48px" />

        <TextView
            android:layout_width="1px"
            android:layout_height="54px"
            android:background="#949494" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/register_et_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="38px"
            android:background="@null"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColorHint="#c6c6c6"
            android:textCursorDrawable="@null"
            android:textSize="38px"
            app:met_clearButton="true"
            app:met_hideUnderline="true" />

    </LinearLayout>

    <Button
        android:id="@+id/register_btn"
        style="@android:style/Widget.Holo.Button.Borderless.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68px"
        android:layout_marginRight="68px"
        android:layout_marginTop="110px"
        android:background="@drawable/btn_register_bg"
        android:text="注册"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="20px"
        android:paddingLeft="12px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击注册表示同意\u3000“" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分通物流用户协议"
            android:textColor="#56c4ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="”" />
    </LinearLayout>

</LinearLayout>
