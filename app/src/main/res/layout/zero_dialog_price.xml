<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebeced"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:background="@drawable/quick_login_input_border"
        android:layout_marginTop="15px"
        android:gravity="center">
        <TextView
            android:layout_width="1px"
            android:layout_height="54px"
            android:background="#949494"
            android:layout_gravity=""
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/zero_et_price_fang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="38px"
            android:background="@null"
            android:hint="请输入单价(方)"
            android:inputType="phone"
            android:singleLine="true"
            android:textColorHint="#c6c6c6"
            android:textCursorDrawable="@null"
            android:textSize="38px"
            app:met_clearButton="true"
            app:met_hideUnderline="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:background="@drawable/quick_login_input_border"
        android:layout_marginTop="10px"
        android:gravity="center">
        <TextView
            android:layout_width="1px"
            android:layout_height="54px"
            android:background="#949494"
            android:layout_gravity=""
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/zero_et_price_dun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="38px"
            android:background="@null"
            android:hint="请输入单价(吨)"
            android:inputType="phone"
            android:singleLine="true"
            android:textColorHint="#c6c6c6"
            android:textCursorDrawable="@null"
            android:textSize="38px"
            app:met_clearButton="true"
            app:met_hideUnderline="true" />

    </LinearLayout>
    <Button
        android:text="确定"
        android:id="@+id/zero_dialog_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_login_bg"
        android:layout_marginTop="90px"
        android:layout_gravity="center"
        />

</LinearLayout>